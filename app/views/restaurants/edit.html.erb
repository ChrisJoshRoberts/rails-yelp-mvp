<div class="container">
  <h1>Editing <%= @restaurant.name %> </h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, :collection => %w[Chiniese Japanese Italian French Belgian] %>
    <%= f.input :phone_number %>
    <%= f.submit %>
  <% end %>
</div>
