<div class="container mt-3">
  <div class="p-3 mb-2 bg-light text-light-emphasis rounded" id="card">
    <div class="left">
      <h4 class="text-primary"><%= @restaurant.name %></h4>
      <p><%= @restaurant.address %></p>
      <p><em><%= @restaurant.phone_number %></em></p>
      <p><strong><%= @restaurant.category %></strong></p>
      <h5 class="text-primary-emphasis">reviews</h5>
      <div class="card-reviews">
        <% @restaurant.reviews.each do |review| %>
          <%= review.content %>
          <p><strong><%= review.rating %> stars</strong></p>
        <% end %>
    </div>
    </div>
    <div class="d-flex flex-column">
    <p class="btn btn-info m-2"><%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %></p>
    <p class="btn btn-secondary m-2"><%= link_to 'Edit', edit_restaurant_path %></p>
    <p class="btn btn-primary m-2"><%= link_to 'Back', restaurants_path %></p>
    </div>

</div>
